        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NETInterfacesExample_WPF"
        mc:Ignorable="d"
        Title="Indexer" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <!-- Defines the main layout container -->
    <Grid>
        <!-- Button to trigger the indexer test -->
        <Button x:Name="btnIndexer" Content="Test Indexer" Click="btnIndexer_Click"/>
    </Grid>
</Window>